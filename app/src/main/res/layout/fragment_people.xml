<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.hsd.avh.standstrong.viewmodels.PeopleViewModel"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swiping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/people_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="56dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/list_item_people"/>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!--Empyty State!-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:isGone="@{!viewmodel.hasPeople}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"

                android:background="@android:color/white">

                <ImageView
                    android:layout_width="275dp"
                    android:layout_height="275dp"
                    android:src="@drawable/no_posts"
                    android:alpha="0.75"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="@string/no_people"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="@color/fontColor"
                    android:layout_gravity="center"
                    android:padding="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_people_long"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:textColor="@color/fontColor"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:padding="5dp" />

            </LinearLayout>
        </FrameLayout>


    </FrameLayout>



</layout>